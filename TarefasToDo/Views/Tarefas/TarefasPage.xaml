<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:tarefas="clr-namespace:TarefasToDo.Models.Tarefas"
             x:Class="TarefasToDo.Views.Tarefas.TarefasPage"
             x:DataType="x:Object"
             Title="Tarefas Page">
    <Grid>
        <ScrollView>
            <StackLayout>
                <Button
                   Text="&#8592;"
                   FontSize="35"
                   TextColor="DimGray"
                   FontAttributes="Bold"
                   Clicked="Voltar_Clicked"
                   BackgroundColor="Transparent"
                   HorizontalOptions="Start"
                   VerticalOptions="Start"
                   Margin="5,0,0,0"
                   Padding="0"/>
                <StackLayout Padding="20" Spacing="15">
                    <Label
                   HorizontalOptions="Center"
                   Margin="0,20,0,10">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span
                               Text="Tarefas do grupo: "
                               FontSize="22"
                               FontAttributes="Bold"
                               TextColor="#2D2D2D"/>
                                <Span
                               x:Name="ConjuntoSpan"
                               Text=""
                               FontSize="22"
                               FontAttributes="Bold"
                               TextColor="#5D5FEF"/>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>

                    <BoxView
                   HeightRequest="1"
                   Color="#B0B0B0"
                   HorizontalOptions="Fill"
                   Margin="0,0,0,10"/>
                    <Label
                   Text="Minhas tarefas"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="#1E1E1E"
                   Margin="0,0,0,10"/>

                    <Label
                   x:Name="SemTarefaLabel"
                   Text="Nenhum item encontrado"
                   TextColor="#666666"
                   FontSize="13"
                   HorizontalOptions="Center"
                   FontAttributes="Italic"
                   Margin="0,0,0,10"
                   IsVisible="False"/>
                    
                    <CollectionView
                   x:Name="TarefaCollectionView"
                   ItemsSource="{Binding Tarefas}"
                   SelectionMode="None">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="tarefas:TarefaLista">
                                <Grid
                                    Padding="0"
                                    Margin="4,2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="5"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <BoxView x:Name="StatusColorBox"
                                             Grid.Column="0"
                                             WidthRequest="5"
                                             BackgroundColor="Gray"/>
                                    <Border
                                        Grid.Column="1"
                                        Stroke="#CCC"
                                        StrokeThickness="1"
                                        Padding="12"
                                        StrokeShape="RoundRectangle 8">
                                        <Border.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="Tarefa_Tapped"/>
                                        </Border.GestureRecognizers>
                                        
                                        <VerticalStackLayout Spacing="5">
                                            <Grid ColumnDefinitions="*, Auto">
                                                <Label
                                               Text="{Binding Nome}"
                                               FontSize="15"
                                               FontAttributes="Bold"
                                               Grid.Column="0"
                                               VerticalOptions="Center"/>
                                                <Button
                                               Text="â‹®"
                                               FontSize="18"
                                               Padding="0"
                                               Margin="0"
                                               WidthRequest="30"
                                               HeightRequest="30"
                                               BackgroundColor="Transparent"
                                               TextColor="Black"
                                               VerticalOptions="Start"
                                               HorizontalOptions="End"
                                               Clicked="MostraOpcoes_Clicked"/>
                                            </Grid>
                                            
                                            <Label
                                                Text="{Binding Descricao}"
                                                FontSize="12"
                                                TextColor="Gray"
                                                HorizontalOptions="Center"/>
                                            <Label 
                                                FontSize="12"
                                                TextColor="#333">
                                                <Label.FormattedText>
                                                    <FormattedString>
                                                        <Span Text="{Binding Status}"/>
                                                    </FormattedString>
                                                </Label.FormattedText>
                                            </Label>
                                        </VerticalStackLayout>
                                    </Border>

                                    <Grid.Triggers>
                                        <DataTrigger TargetType="Grid" Binding="{Binding Status}" Value="Aberta">
                                            <Setter TargetName="StatusColorBox" Property="BackgroundColor" Value="#FFC107" />
                                        </DataTrigger>
                                        <DataTrigger TargetType="Grid" Binding="{Binding Status}" Value="Em andamento">
                                            <Setter TargetName="StatusColorBox" Property="BackgroundColor" Value="#2196F3" />
                                        </DataTrigger>
                                        <DataTrigger TargetType="Grid" Binding="{Binding Status}" Value="Completa">
                                            <Setter TargetName="StatusColorBox" Property="BackgroundColor" Value="#4CAF50" />
                                        </DataTrigger>
                                    </Grid.Triggers>

                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>
            </StackLayout>
        </ScrollView>
        <Button
           Text="+"
           Clicked="CriarTarefa_Clicked"
           FontSize="30"
           WidthRequest="64"
           HeightRequest="64"
           CornerRadius="32"
           BackgroundColor="#21618C"
           TextColor="White"
           HorizontalOptions="End"
           VerticalOptions="End"
           Margin="20,40">
            <Button.Shadow>
                <Shadow Brush="Black" Offset="4,4" Radius="10" Opacity="0.3" />
            </Button.Shadow>
        </Button>
    </Grid>
</ContentPage>