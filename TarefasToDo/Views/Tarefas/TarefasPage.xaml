<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TarefasToDo.Views.Tarefas.TarefasPage"
             Title="TarefasPage">
    <ScrollView>
        <StackLayout Padding="20" Spacing="15">
            <Grid ColumnDefinitions="*, Auto" VerticalOptions="Center">
                <Label 
                    x:Name="WelcomeLabel"
                    FontSize="22"
                    FontAttributes="Bold"
                    TextColor="Black"
                    VerticalOptions="Center"
                    Grid.Column="0"/>
                <Button
                    Text="Voltar"
                    Clicked="Voltar_Clicked"
                    Background="DarkGray"
                    TextColor="White"
                    FontSize="13"
                    Grid.Column="1"
                    Margin="10,10,10,10"/>
            </Grid>

            <Label Text="___________________________________________________"
                   TextColor="DarkGray"
                   HorizontalOptions="Center" />

            <Grid ColumnDefinitions="*, Auto" VerticalOptions="Center">
                <Label 
                    Text="Minhas tarefas"
                    FontSize="15"
                    FontAttributes="Bold"
                    Grid.Column="0"
                    VerticalOptions="Center"/>
                <Button 
                    Text="Nova"
                    BackgroundColor="DarkSlateBlue"
                    TextColor="White"
                    Padding="8,4"
                    FontSize="13"
                    CornerRadius="5"
                    Clicked="CriarTarefa_Clicked"
                    Grid.Column="1"
                    VerticalOptions="Center"
                    Margin="10,0,0,0"/>
            </Grid>
            
            <Label 
                x:Name="SemTarefaLabel"
                Text="Nenhum item encontrado"
                TextColor="Gray"
                FontSize="12"
                IsVisible="False"
                HorizontalOptions="Center"
                Margin="0,0,0,10"/>

            <CollectionView
                x:Name="TarefaCollectionView"
                ItemsSource="{Binding Tarefas}"
                SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border
                            x:Name="TarefaBorder"
                            Stroke="Gray"
                            StrokeThickness="1"
                            Padding="10"
                            Margin="5"
                            StrokeShape="RoundRectangle 5">

                            <Border.Triggers>
                                <DataTrigger TargetType="Border" Binding="{Binding Status}" Value="Aberta">
                                    <Setter Property="BackgroundColor" Value="#FFFDE7" />
                                </DataTrigger>
                                <DataTrigger TargetType="Border" Binding="{Binding Status}" Value="EmAndamento">
                                    <Setter Property="BackgroundColor" Value="#E3F2FD" />
                                </DataTrigger>
                                <DataTrigger TargetType="Border" Binding="{Binding Status}" Value="Completa">
                                    <Setter Property="BackgroundColor" Value="#E8F5E9" />
                                </DataTrigger>
                            </Border.Triggers>

                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="Tarefa_Tapped" />
                            </Border.GestureRecognizers>
                            
                            <VerticalStackLayout Spacing="5">
                                <Grid ColumnDefinitions="*, Auto">
                                    <Label
                                        Text="{Binding Nome}"
                                        FontSize="15"
                                        FontAttributes="Bold"
                                        Grid.Column="0"
                                        VerticalOptions="Center"/>
                                    <Button
                                        Text="â‹®"
                                        FontSize="18"
                                        Padding="0"
                                        Margin="0"
                                        WidthRequest="30"
                                        HeightRequest="30"
                                        BackgroundColor="Transparent"
                                        TextColor="Black"
                                        VerticalOptions="Start"
                                        HorizontalOptions="End"
                                        Clicked="MostraOpcoes_Clicked" />
                                </Grid>
                                <Label
                                    Text="{Binding Descricao}"
                                    FontSize="12"
                                    TextColor="Gray"
                                    HorizontalOptions="Center"/>
                                <Label
                                    Text="{Binding Status}"
                                    FontSize="12"
                                    HorizontalOptions="Start"
                                    TextColor="Black"/>
                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ScrollView>
</ContentPage>