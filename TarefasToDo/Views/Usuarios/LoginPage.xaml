<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:controls="clr-namespace:TarefasToDo.Views.Controls"
            x:Class="TarefasToDo.Views.Usuarios.LoginPage">  
   <VerticalStackLayout Padding="20" Spacing="15">
        <Image   
           Source="logo.png"  
           WidthRequest="180"  
           HeightRequest="180"/>

        <controls:EntryEstilo  
           x:Name="EmailEntry"  
           PlaceholderText="Digite seu email"  
           IconSource="email.png"  
           Keyboard="Email"  
           Text="{Binding Email, Source={x:Reference This}}"/>

        <controls:EntryEstilo 
            x:Name="SenhaEntry"
            PlaceholderText="Digite sua senha"
            IconSource="senha.png"
            Keyboard="Password"
            Text="{Binding Senha, Source={x:Reference This}}"/>
 
       <Button x:Name="LoginButton"  
               Text="Login"  
               Clicked="LoginButton_Clicked"
               BackgroundColor="#21618C"
               WidthRequest="300"/>  

       <Button Text="NÃ£o possui cadastro? Cadastre-se!"  
               Clicked="CadastrarButton_Clicked"  
               BackgroundColor="Transparent"  
               TextColor="Blue"  
               FontAttributes="Italic"/>  

   </VerticalStackLayout>  
</ContentPage>